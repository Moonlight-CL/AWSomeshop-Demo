# AWSomeShop 环境变量配置文件
# 复制此文件为 .env 并根据实际环境修改配置

# ===========================================
# 应用基础配置
# ===========================================
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# 数据库配置
# ===========================================
DATABASE_URL=postgresql+asyncpg://awsome_user:awsome_password@localhost:5432/awsome_shop
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===========================================
# Redis配置
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# CORS和安全配置
# ===========================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost"]
ALLOWED_HOSTS=["localhost","127.0.0.1","awsome-shop.local"]

# ===========================================
# 邮件服务配置
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ===========================================
# AWS服务配置
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=awsome-shop-assets

# ===========================================
# 文件上传配置
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]

# ===========================================
# 前端配置
# ===========================================
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000
VITE_APP_NAME=AWSomeShop
VITE_APP_VERSION=1.0.0
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=true