{
  "name": "awsome-shop-infra",
  "version": "1.0.0",
  "description": "AWSomeShop AWS CDK Infrastructure",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:dev": "cdk deploy --all --require-approval never --context environment=dev",
    "deploy:prod": "cdk deploy --all --require-approval never --context environment=prod",
    "deploy:dev:vpc": "cdk deploy --all --require-approval never --context environment=dev --context vpcId=${VPC_ID}",
    "deploy:prod:vpc": "cdk deploy --all --require-approval never --context environment=prod --context vpcId=${VPC_ID}",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "destroy": "cdk destroy --all",
    "bootstrap": "cdk bootstrap"
  },
  "keywords": [
    "aws-cdk",
    "ecs",
    "fargate",
    "infrastructure"
  ],
  "author": "AWSomeShop Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.110.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.3.1"
  }
}
